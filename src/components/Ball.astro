---
import Card from "./Card.astro";
import CardInfo from "./CardInfo.astro";
---

<Card>
  <canvas id="ball" width="200px" height="200px" class="w-full m-auto"></canvas>
  <CardInfo text='Constrants: Follow Path' riveLink='https://rive.app/community/5796-11317-bouncing-ball/'/>
</Card>

<script>
  import { Rive } from "@rive-app/canvas";

  //Ball
  const ball = new Rive({
    src: "animations/bouncing_ball.riv",
    canvas: document.getElementById("ball"),
    autoplay: true,
    onLoad: () => {
      ball.resizeDrawingSurfaceToCanvas();
    },
  });
</script>
